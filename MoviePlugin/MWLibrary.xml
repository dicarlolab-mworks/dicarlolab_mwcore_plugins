<MWElements>
    <MWElement name="Frame List Stimulus">
        <match_signature>stimulus[@type="frame_list"]</match_signature>
        
        <isa>Stimulus</isa>
        
        <description>
A simple movie stimulus that gets its frames from the specified stimulus group and presents them at the native refresh rate of the display
        </description>
        
        <code>
            <stimulus type="frame_list"
                      tag="New Frame List"
                      stimulus_group="" 
                      ended=""
                      loop="0"
                      autoplay="0" />
        </code>
    </MWElement>
    <MWElement name="Movie Stimulus">
        <match_signature>stimulus[@type="movie"]</match_signature>
        
        <isa>Stimulus</isa>
        
        <description>
A movie stimulus
        </description>
        
        <code>
            <stimulus type="movie"
                      tag="New Movie"
                      stimulus_group="" 
                      frames_per_second="10"
                      ended=""
                      loop="0"
                      autoplay="0" />
        </code>
    </MWElement>
    <MWElement name="Image Directory Movie Stimulus">
        <match_signature>stimulus[@type="image_directory_movie"]</match_signature>
        
        <isa>Stimulus</isa>
        
        <description>
A movie stimulus that gets its frames from a directory of image files
        </description>
        
        <code>
            <stimulus type="image_directory_movie"
                      tag="New Image Directory Movie"
                      directory_path=""
                      x_size="5.0"
                      y_size="5.0"
                      x_position="0.0"
                      y_position="0.0"
                      rotation="0.0"
                      alpha_multiplier="1.0"
                      deferred="no"
                      frames_per_second="10"
                      ended=""
                      loop="0"
                      autoplay="0" />
        </code>
    </MWElement>
</MWElements>
